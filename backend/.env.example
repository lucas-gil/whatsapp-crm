# ========== DATABASE ==========
DATABASE_URL="postgresql://whatsapp_user:whatsapp_password@postgres:5432/whatsapp_crm"

# ========== JWT ==========
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production-min-32-chars"
JWT_EXPIRY="24h"

# ========== PORT & ENV ==========
PORT=3000
NODE_ENV="development"

# ========== REDIS ==========
REDIS_URL="redis://redis:6379"

# ========== CORS ==========
CORS_ORIGIN="http://localhost:3001"

# ========== WHATSAPP PROVIDER ==========
# Opções: "web-qr" (padrão) ou "cloud-api"
WHATSAPP_PROVIDER="web-qr"

# Cloud API (opcional, para migração futura)
# WHATSAPP_CLOUD_API_TOKEN="your-token"
# WHATSAPP_PHONE_ID="your-phone-id"

# ========== GEMINI AI ==========
GEMINI_API_KEY="your-gemini-api-key-optional"

# ========== STORAGE ==========
# Opções: "local" (padrão), "s3", "minio"
STORAGE_PROVIDER="local"
STORAGE_PATH="./storage"

# S3 / MinIO (opcional)
# S3_BUCKET="whatsapp-crm"
# S3_REGION="us-east-1"
# S3_ACCESS_KEY="..."
# S3_SECRET_KEY="..."

# ========== ADMIN SEED ==========
ADMIN_WORKSPACE_SLUG="default"

# ========== DEBUG ==========
DEBUG="false"
